<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_info_title"
            android:text="@string/serviceInfo"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_id_title"
            android:text="@string/serviceId"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_info_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_id_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_id_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_name_title"
            android:text="@string/serviceName"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_id_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_name_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_name_title"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_type_title"
            android:text="@string/serviceType"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_name_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_type_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_type_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_area_title"
            android:text="@string/serviceArea"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_type_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_area_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_area_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_language_title"
            android:text="@string/serviceLanguage"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_area_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_language_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_language_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_price_title"
            android:text="@string/servicePrice"
            android:textSize="11sp"
            android:background="@color/gray_bright"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_language_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_price_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_alignTop="@+id/service_price_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/service_hour_title"
            android:text="@string/serviceHoursCount"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_price_content"/>

        <Button android:id="@+id/minusHour"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="16sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_hour_title"
            android:background="@drawable/text_bg"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:id="@+id/service_hour_content"
            android:background="@drawable/text_bg"
            android:textSize="11sp"
            android:text="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/minusHour"
            android:layout_alignBottom="@+id/minusHour"
            />

        <Button android:id="@+id/addHour"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="16sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/service_people_content"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_hour_title"
            android:background="@drawable/text_bg"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_total_price_title"
            android:text="@string/serviceTotalPrice"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_hour_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:id="@+id/service_total_price_content"
            android:background="@drawable/text_bg"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="11sp"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_total_price_title"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_question_title"
            android:text="@string/serviceQuestion"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_total_price_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textMultiLine"
            android:id="@+id/service_question_content"
            android:background="@drawable/text_bg"
            android:textSize="11sp"
            android:gravity="top|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_question_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_date_title"
            android:text="@string/serviceStartDate"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_question_content"/>

        <!--<DatePicker-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:id="@+id/service_date_content"-->
            <!--android:textColor="@color/eknowTitle"-->
            <!--android:layout_marginLeft="@dimen/content_margin_left"-->
            <!--android:layout_marginRight="@dimen/content_margin_right"-->
            <!--android:layout_below="@+id/service_date_title"/>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="date"
            android:id="@+id/service_date_content"
            android:background="@drawable/text_bg"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="11sp"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:paddingLeft="@dimen/content_padding_left"
            android:paddingRight="@dimen/content_padding_right"
            android:layout_below="@+id/service_date_title"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_people_title"
            android:text="@string/servicePeopleCount"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_date_content"/>

        <Button android:id="@+id/minusPeople"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="16sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_people_title"
            android:background="@drawable/text_bg"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:id="@+id/service_people_content"
            android:background="@drawable/text_bg"
            android:textSize="11sp"
            android:text="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/minusPeople"
            android:layout_alignBottom="@+id/minusPeople"
          />

        <Button android:id="@+id/addPeople"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="16sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/service_people_content"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_people_title"
            android:background="@drawable/text_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/service_license_read_title"
            android:text="@string/serviceLicenseRead"
            android:textSize="12sp"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_people_content"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/service_license_agree"
            android:text="@string/serviceLicenseAgree"
            android:textColor="@color/eknowTitle"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/content_margin_left"
            android:layout_marginRight="@dimen/content_margin_right"
            android:layout_below="@+id/service_license_read_title"
            />


    </RelativeLayout>
</ScrollView>